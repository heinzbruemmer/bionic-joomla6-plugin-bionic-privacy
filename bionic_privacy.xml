<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_BIONIC_PRIVACY</name>
    <author>Bionic Technologies</author>
    <creationDate>November 2024</creationDate>
    <copyright>Copyright (C) 2024 Bionic Technologies. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>info@bionic-world.de</authorEmail>
    <authorUrl>www.bionic-world.de</authorUrl>
    <version>2.4.9</version>
    <description>PLG_SYSTEM_BIONIC_PRIVACY_XML_DESCRIPTION</description>
    
    <namespace path="src">Joomla\Plugin\System\BionicPrivacy</namespace>
    
    <files>
        <filename plugin="bionic_privacy">bionic_privacy.php</filename>
        <folder>language</folder>
        <folder>media</folder>
    </files>
    
    <media destination="plg_system_bionic_privacy" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    
    <languages>
        <language tag="de-DE">language/de-DE/de-DE.plg_system_bionic_privacy.ini</language>
        <language tag="de-DE">language/de-DE/de-DE.plg_system_bionic_privacy.sys.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_bionic_privacy.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_bionic_privacy.sys.ini</language>
    </languages>
    
    <config>
        <fields name="params">
            
            <!-- BASIC SETTINGS -->
            <fieldset name="basic" label="PLG_SYSTEM_BIONIC_PRIVACY_FIELDSET_BASIC">
                
                <field
                    name="privacy_article_id"
                    type="sql"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_PRIVACY_ARTICLE"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_PRIVACY_ARTICLE_DESC"
                    query="SELECT id AS value, title AS text FROM #__content WHERE state = 1 ORDER BY title ASC"
                    key_field="value"
                    value_field="text"
                    default=""
                    required="false"
                >
                    <option value="">- Kein Artikel ausgew√§hlt -</option>
                </field>
                
                <field
                    name="cookie_lifetime"
                    type="number"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_COOKIE_LIFETIME"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_COOKIE_LIFETIME_DESC"
                    default="365"
                    min="1"
                    max="730"
                />
                
                <field
                    name="show_details"
                    type="radio"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_SHOW_DETAILS"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_SHOW_DETAILS_DESC"
                    default="0"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field
                    name="log_consent"
                    type="radio"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_LOG_CONSENT"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_LOG_CONSENT_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
            </fieldset>
            
            <!-- GERMAN TEXT OVERRIDES -->
            <fieldset name="text_de" label="PLG_SYSTEM_BIONIC_PRIVACY_FIELDSET_TEXT_DE">
                
                <field
                    name="spacer_de"
                    type="spacer"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_SPACER_DE_INFO"
                />
                
                <field
                    name="title_de"
                    type="text"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_TITLE_DE"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_TITLE_DE_DESC"
                    default=""
                    size="50"
                    filter="string"
                />
                
                <field
                    name="message_de"
                    type="textarea"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_MESSAGE_DE"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_MESSAGE_DE_DESC"
                    default=""
                    rows="4"
                    cols="50"
                    filter="string"
                />
                
                <field
                    name="accept_de"
                    type="text"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_ACCEPT_DE"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_ACCEPT_DE_DESC"
                    default=""
                    size="30"
                    filter="string"
                />
                
                <field
                    name="decline_de"
                    type="text"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DECLINE_DE"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DECLINE_DE_DESC"
                    default=""
                    size="30"
                    filter="string"
                />
                
                <field
                    name="privacy_link_de"
                    type="text"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_PRIVACY_LINK_DE"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_PRIVACY_LINK_DE_DESC"
                    default=""
                    size="30"
                    filter="string"
                />
                
                <field
                    name="details_de"
                    type="text"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DETAILS_DE"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DETAILS_DE_DESC"
                    default=""
                    size="30"
                    filter="string"
                />
                
                <field
                    name="details_text_de"
                    type="textarea"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DETAILS_TEXT_DE"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DETAILS_TEXT_DE_DESC"
                    default=""
                    rows="3"
                    cols="50"
                    filter="string"
                />
                
            </fieldset>
            
            <!-- ENGLISH TEXT OVERRIDES -->
            <fieldset name="text_en" label="PLG_SYSTEM_BIONIC_PRIVACY_FIELDSET_TEXT_EN">
                
                <field
                    name="spacer_en"
                    type="spacer"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_SPACER_EN_INFO"
                />
                
                <field
                    name="title_en"
                    type="text"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_TITLE_EN"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_TITLE_EN_DESC"
                    default=""
                    size="50"
                    filter="string"
                />
                
                <field
                    name="message_en"
                    type="textarea"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_MESSAGE_EN"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_MESSAGE_EN_DESC"
                    default=""
                    rows="4"
                    cols="50"
                    filter="string"
                />
                
                <field
                    name="accept_en"
                    type="text"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_ACCEPT_EN"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_ACCEPT_EN_DESC"
                    default=""
                    size="30"
                    filter="string"
                />
                
                <field
                    name="decline_en"
                    type="text"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DECLINE_EN"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DECLINE_EN_DESC"
                    default=""
                    size="30"
                    filter="string"
                />
                
                <field
                    name="privacy_link_en"
                    type="text"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_PRIVACY_LINK_EN"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_PRIVACY_LINK_EN_DESC"
                    default=""
                    size="30"
                    filter="string"
                />
                
                <field
                    name="details_en"
                    type="text"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DETAILS_EN"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DETAILS_EN_DESC"
                    default=""
                    size="30"
                    filter="string"
                />
                
                <field
                    name="details_text_en"
                    type="textarea"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DETAILS_TEXT_EN"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_DETAILS_TEXT_EN_DESC"
                    default=""
                    rows="3"
                    cols="50"
                    filter="string"
                />
                
            </fieldset>
            
            <!-- STYLING -->
            <fieldset name="styling" label="PLG_SYSTEM_BIONIC_PRIVACY_FIELDSET_STYLING">
                
                <field
                    name="custom_css"
                    type="textarea"
                    label="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_CUSTOM_CSS"
                    description="PLG_SYSTEM_BIONIC_PRIVACY_FIELD_CUSTOM_CSS_DESC"
                    default=""
                    rows="10"
                    cols="50"
                    filter="raw"
                    class="text-monospace"
                />
                
            </fieldset>
            
        </fields>
    </config>
</extension>
